<div class="section">
  <h1>Login!</h1>

  <form action="/login" method="post">

    <div class="input-group">
      <label for="username">Username: </label>
      <input type="text" name="username" id="username" class="form-control"></input><br>
    </div>

    <div class="input-group">
      <label for="password">Password: </label>
      <input type="password" name="password" id="password" class="form-control"></input><br>
    </div>
    <br>
    <input type="submit" name="submit" value="Log In" id="submit" class="btn btn-primary btn-orange btn-md">
  </form>
</div>
